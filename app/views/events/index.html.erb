<h1>イベント一覧</h1>
<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>イベント名</th>
      <th>開催日時</th>
      <th>ステータス</th>
      <!--th colspan="3"></th-->
    </tr>
  </thead>

<% @events.each do |e| %>
  <tr>
    <td><%= e.event_name %></td>
    <td><%= e.event_datetime %></td>
    <td></td>
  </tr>
<% end %>
</table>

