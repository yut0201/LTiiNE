<h1>新規登録</h1>
<div class="regist_form">
  <%= form_with model: @user, :url => {:action => :create} do |f| %>
    <div class="form-group">
    	<%= f.label "氏名" %><%= f.text_field :user_name, class: "form-text" %>
    </div>
    <div class="form-group">
    <%= f.label "ユーザ名" %><%= f.text_field :display_name, class: "form-text" %>
    </div>
    <div class="form-group">
    <%= f.label "メールアドレス" %><%= f.text_field :email, class: "form-text" %>
    </div>
    <div class="form-group">
    <%= f.label "パスワード" %><%= f.password_field :password, class: "form-text" %>
	</div>
	<div class="form-group">
    <%= f.label "パスワード(確認用)" %><%= f.password_field :password_confirmation, class: "form-text" %>
	</div>
    <%= f.submit "Sign Up", class: "btn btn-primary" %>
  <% end %>
</div>